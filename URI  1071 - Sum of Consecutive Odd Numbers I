#include <stdio.h>

int main() {

    int a,b,t,n=0;
    scanf("%d%d",&a,&b);
    if(a>b){
      if(b%2==0){
         for(t=b+1;t<a;t=t+2){
          n=n+t;
         }
        }else{
          for(t=b+2;t<a;t=t+2){
           n=n+t;
          }
      }
     }

    if(b>a){
                if(a%2==0){

                      for(t=a+1;t<b;t=t+2){
                          n=n+t;
                  }
                }else{
                        for(t=a+2;t<b;t=t+2){
                          n=n+t;
                      }
                }

        }
       printf("%d\n",n);

    }


