#include <stdio.h>
 
int main() {
 
 float a,b,c,d,e,avg,f;
 scanf("%f%f%f%f",&a,&b,&c,&d);
 
 avg=((a*2)+(b*3)+(c*4)+(d*1))/10;
 
 printf("Media: %0.1f\n",avg);
 
 if(avg>= 7.0){
     printf("Aluno aprovado.\n");
 }
 else if(avg<5.0){
     printf("Aluno reprovado.\n");
 }
 else if(avg>=5.0 && avg<=6.9){
     printf("Aluno em exame.\n");
     scanf("%f",&e);
     printf("Nota do exame: %0.1f\n",e);
     f=(avg+e)/2;
     
         if(f>=5.0){
             printf("Aluno aprovado.\n");
             }
         else if(f<=4.9){
             printf("Aluno reprovado.\n");
         }
     printf("Media final: %0.1f\n",f);
 }
 
    return 0;
}
